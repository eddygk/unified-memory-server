# Network Configuration
REDIS_URL=redis://redis:6379
PORT=8000
MCP_PORT=9000
HOST=0.0.0.0

# Authentication (REQUIRED for multi-agent)
DISABLE_AUTH=false
OAUTH2_ISSUER_URL=https://your-domain.auth0.com/
OAUTH2_AUDIENCE=https://memory.your-domain.local
OAUTH2_ALGORITHMS=["RS256"]

# AI Service Keys (shared by all agents)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Memory Configuration
LONG_TERM_MEMORY=true
WINDOW_SIZE=20
GENERATION_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
ENABLE_TOPIC_EXTRACTION=true
ENABLE_NER=true

# Background Tasks
DOCKET_NAME=memory-server-prod
USE_DOCKET=true

# Logging
LOG_LEVEL=INFO

# Neo4j Configuration (optional)
NEO4J_URL=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Basic Memory Configuration (optional)
BASIC_MEMORY_PATH=/data/obsidian

# Redis Security
REDIS_PASSWORD=your-redis-password